#include <stdio.h>
#include "main.h"

/**
 * print_sign - prints sign of a number
 *
 * @n: value to be checked
 *
 * return: 1 if n is greater than 0
 * 0 if n is 0
 * -1 if n is less than 1
 *
 */

int print_sign(int n)
{

if (n == 0)
{
_putchar(n + '0');
return (0);
}

if (n < 0)
{
_putchar('-');
return (-1);
}

if (n > 0)
{
_putchar('+');
return (1);
}

return (0);

}
